---

<Layout title="Properties for Sale in Playa del Carmen & Riviera Maya">
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header">
      <div class="container">
        <nav class="breadcrumb">
          <a href="/">Home</a>
          <span>/</span>
          <span>Properties</span>
        </nav>
        <h1>Properties for Sale</h1>
        <p>Discover your perfect property in the Riviera Maya</p>
      </div>
    </section>

    <!-- Search & Filters -->
    <section class="filters-section">
      <div class="container">
        <div class="filters-bar">
          <div class="filters-left">
            <div class="filter-group">
              <label>Location</label>
              <select>
                <option value="">All Locations</option>
                <option value="playa-del-carmen">Playa del Carmen</option>
                <option value="playacar">Playacar</option>
                <option value="tulum">Tulum</option>
                <option value="puerto-aventuras">Puerto Aventuras</option>
                <option value="akumal">Akumal</option>
              </select>
            </div>
            
            <div class="filter-group">
              <label>Type</label>
              <select>
                <option value="">All Types</option>
                <option value="condo">Condo</option>
                <option value="villa">Villa</option>
                <option value="penthouse">Penthouse</option>
                <option value="land">Land</option>
              </select>
            </div>
            
            <div class="filter-group">
              <label>Price</label>
              <select>
                <option value="">Any Price</option>
                <option value="0-200000">Up to $200K</option>
                <option value="200000-500000">$200K - $500K</option>
                <option value="500000-1000000">$500K - $1M</option>
                <option value="1000000+">$1M+</option>
              </select>
            </div>
            
            <div class="filter-group">
              <label>Beds</label>
              <select>
                <option value="">Any</option>
                <option value="1">1+</option>
                <option value="2">2+</option>
                <option value="3">3+</option>
                <option value="4">4+</option>
              </select>
            </div>
            
            <button class="btn-filter-more">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="4" y1="21" x2="4" y2="14"/>
                <line x1="4" y1="10" x2="4" y2="3"/>
                <line x1="12" y1="21" x2="12" y2="12"/>
                <line x1="12" y1="8" x2="12" y2="3"/>
                <line x1="20" y1="21" x2="20" y2="16"/>
                <line x1="20" y1="12" x2="20" y2="3"/>
                <line x1="1" y1="14" x2="7" y2="14"/>
                <line x1="9" y1="8" x2="15" y2="8"/>
                <line x1="17" y1="16" x2="23" y2="16"/>
              </svg>
              More Filters
            </button>
          </div>
          
          <div class="filters-right">
            <div class="results-count">
              <strong>{allProperties.length}</strong> properties found
            </div>
            <div class="sort-group">
              <label>Sort by:</label>
              <select>
                <option value="featured">Featured</option>
                <option value="price-low">Price: Low to High</option>
                <option value="price-high">Price: High to Low</option>
                <option value="newest">Newest</option>
              </select>
            </div>
            <div class="view-toggle">
              <button class="view-btn active" aria-label="Grid view">
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                  <path d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"/>
                </svg>
              </button>
              <button class="view-btn" aria-label="List view">
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                  <path d="M4 14h4v-4H4v4zm0 5h4v-4H4v4zM4 9h4V5H4v4zm5 5h12v-4H9v4zm0 5h12v-4H9v4zM9 5v4h12V5H9z"/>
                </svg>
              </button>
              <button class="view-btn" aria-label="Map view">
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                  <path d="M20.5 3l-.16.03L15 5.1 9 3 3.36 4.9c-.21.07-.36.25-.36.48V20.5c0 .28.22.5.5.5l.16-.03L9 18.9l6 2.1 5.64-1.9c.21-.07.36-.25.36-.48V3.5c0-.28-.22-.5-.5-.5zM15 19l-6-2.11V5l6 2.11V19z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Properties Grid -->
    <section class="properties-listing section">
      <div class="container">
        <div class="properties-grid">
          {allProperties.map((property) => (
            <PropertyCard {...property} />
          ))}
        </div>

        <!-- Pagination -->
        <nav class="pagination">
          <button class="page-btn" disabled>
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
          </button>
          <button class="page-btn active">1</button>
          <button class="page-btn">2</button>
          <button class="page-btn">3</button>
          <span class="page-ellipsis">...</span>
          <button class="page-btn">12</button>
          <button class="page-btn">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </button>
        </nav>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  /* Page Header */
  .page-header {
    background: var(--color-ocean-deep);
    padding: 140px 0 var(--space-3xl);
    text-align: center;
    color: var(--color-white);
  }

  .breadcrumb {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.7);
  }

  .breadcrumb a:hover {
    color: var(--color-white);
  }

  .breadcrumb span {
    color: rgba(255, 255, 255, 0.5);
  }

  .page-header h1 {
    color: var(--color-white);
    margin-bottom: var(--space-sm);
  }

  .page-header p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
  }

  /* Filters Section */
  .filters-section {
    background: var(--color-white);
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-sand);
    position: sticky;
    top: 70px;
    z-index: 100;
    box-shadow: var(--shadow-sm);
  }

  .filters-bar {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: var(--space-xl);
    flex-wrap: wrap;
  }

  .filters-left {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    align-items: flex-end;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .filter-group label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-charcoal);
    opacity: 0.7;
  }

  .filter-group select {
    padding: var(--space-sm) var(--space-md);
    padding-right: var(--space-2xl);
    border: 2px solid var(--color-sand);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    min-width: 150px;
    cursor: pointer;
    background: var(--color-white);
  }

  .filter-group select:focus {
    border-color: var(--color-ocean);
    outline: none;
  }

  .btn-filter-more {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-sand-light);
    border: 2px solid var(--color-sand);
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--color-charcoal);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .btn-filter-more:hover {
    border-color: var(--color-ocean);
    color: var(--color-ocean);
  }

  .filters-right {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .results-count {
    font-size: 0.9rem;
    color: var(--color-charcoal);
  }

  .sort-group {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .sort-group label {
    font-size: 0.85rem;
    color: var(--color-charcoal);
    opacity: 0.7;
  }

  .sort-group select {
    padding: var(--space-sm) var(--space-md);
    border: 2px solid var(--color-sand);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    cursor: pointer;
  }

  .view-toggle {
    display: flex;
    border: 2px solid var(--color-sand);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .view-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 36px;
    background: var(--color-white);
    border: none;
    color: var(--color-charcoal);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .view-btn:not(:last-child) {
    border-right: 1px solid var(--color-sand);
  }

  .view-btn:hover {
    background: var(--color-sand-light);
  }

  .view-btn.active {
    background: var(--color-ocean-deep);
    color: var(--color-white);
  }

  /* Properties Grid */
  .properties-listing {
    background: var(--color-sand-light);
  }

  .properties-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
    margin-bottom: var(--space-4xl);
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-sm);
  }

  .page-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    height: 44px;
    padding: 0 var(--space-md);
    background: var(--color-white);
    border: 2px solid var(--color-sand);
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-charcoal);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .page-btn:hover:not(:disabled) {
    border-color: var(--color-ocean);
    color: var(--color-ocean);
  }

  .page-btn.active {
    background: var(--color-ocean-deep);
    border-color: var(--color-ocean-deep);
    color: var(--color-white);
  }

  .page-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .page-ellipsis {
    color: var(--color-charcoal);
    opacity: 0.5;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .properties-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 1024px) {
    .filters-bar {
      flex-direction: column;
      align-items: stretch;
    }

    .filters-left {
      order: 2;
    }

    .filters-right {
      order: 1;
      justify-content: space-between;
      margin-bottom: var(--space-md);
    }
  }

  @media (max-width: 768px) {
    .filters-section {
      position: static;
    }

    .filters-left {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-sm);
    }

    .filter-group select {
      min-width: auto;
      width: 100%;
    }

    .btn-filter-more {
      grid-column: span 2;
      justify-content: center;
    }

    .properties-grid {
      grid-template-columns: 1fr;
    }

    .filters-right {
      flex-wrap: wrap;
      gap: var(--space-sm);
    }

    .sort-group {
      flex: 1;
    }

    .sort-group select {
      flex: 1;
    }
  }
</style>
