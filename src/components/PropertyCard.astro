---
interface Props {
  id: string;
  title: string;
  location: string;
  price: number;
  currency?: string;
  image: string;
  bedrooms: number;
  bathrooms: number;
  area: number;
  type: string;
  badge?: 'featured' | 'new' | 'sold' | null;
  isNew?: boolean;
}

const { 
  id,
  title, 
  location, 
  price, 
  currency = 'USD',
  image, 
  bedrooms, 
  bathrooms, 
  area, 
  type,
  badge = null
} = Astro.props;

const formattedPrice = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: currency,
  maximumFractionDigits: 0
}).format(price);
---

<article class="property-card">
  <a href={`/property/${id}`} class="property-link">
    <div class="property-image">
      <img src={image} alt={title} loading="lazy" />
      <div class="property-overlay">
        <button class="btn-favorite" aria-label="Add to favorites">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
          </svg>
        </button>
        <span class="property-type">{type}</span>
      </div>
      {badge && (
        <span class={`property-badge badge-${badge}`}>
          {badge === 'featured' && '★ Featured'}
          {badge === 'new' && 'New Listing'}
          {badge === 'sold' && 'Sold'}
        </span>
      )}
      <div class="image-gallery-hint">
        <svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
          <path d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"/>
        </svg>
        <span>12 Photos</span>
      </div>
    </div>
    
    <div class="property-content">
      <div class="property-location">
        <svg viewBox="0 0 24 24" width="14" height="14" fill="currentColor">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5a2.5 2.5 0 010-5 2.5 2.5 0 010 5z"/>
        </svg>
        <span>{location}</span>
      </div>
      
      <h3 class="property-title">{title}</h3>
      
      <div class="property-features">
        <div class="feature">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
            <path d="M7 14c1.66 0 3-1.34 3-3S8.66 8 7 8s-3 1.34-3 3 1.34 3 3 3zm0-4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm12-3h-8v8H3V5H1v15h2v-3h18v3h2v-9c0-2.21-1.79-4-4-4zm2 8h-8V9h6c1.1 0 2 .9 2 2v4z"/>
          </svg>
          <span>{bedrooms} Beds</span>
        </div>
        <div class="feature">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
            <circle cx="7" cy="7" r="2"/>
            <path d="M20 13V4.83C20 3.27 18.73 2 17.17 2c-.75 0-1.47.3-2 .83l-1.25 1.25c-.16-.05-.33-.08-.51-.08-.4 0-.77.12-1.08.32l2.76 2.76c.2-.31.32-.68.32-1.08 0-.18-.03-.34-.07-.51l1.25-1.25a.828.828 0 011.41.59V13h-6.85c-.3-.21-.57-.45-.82-.72l-1.4-1.55c-.19-.21-.43-.38-.69-.5A2.251 2.251 0 005 12.25V13H2v6c0 1.1.9 2 2 2 0 .55.45 1 1 1h14c.55 0 1-.45 1-1 1.1 0 2-.9 2-2v-6h-2z"/>
          </svg>
          <span>{bathrooms} Baths</span>
        </div>
        <div class="feature">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"/>
            <path d="M7 12h2v5H7zm4-3h2v8h-2zm4-3h2v11h-2z"/>
          </svg>
          <span>{area.toLocaleString()} m²</span>
        </div>
      </div>
      
      <div class="property-footer">
        <div class="property-price">{formattedPrice}</div>
        <button class="btn-details">
          View Details
          <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </button>
      </div>
    </div>
  </a>
</article>

<style>
  .property-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }

  .property-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .property-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  /* Image Section */
  .property-image {
    position: relative;
    aspect-ratio: 16/11;
    overflow: hidden;
  }

  .property-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .property-card:hover .property-image img {
    transform: scale(1.08);
  }

  .property-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      transparent 30%,
      transparent 70%,
      rgba(0, 0, 0, 0.4) 100%
    );
    padding: var(--space-md);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .btn-favorite {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: var(--radius-full);
    cursor: pointer;
    transition: all var(--transition-fast);
    opacity: 0;
    transform: translateY(-10px);
  }

  .property-card:hover .btn-favorite {
    opacity: 1;
    transform: translateY(0);
  }

  .btn-favorite:hover {
    background: var(--color-coral);
    color: var(--color-white);
  }

  .btn-favorite svg {
    transition: all var(--transition-fast);
  }

  .btn-favorite:hover svg {
    fill: currentColor;
  }

  .property-type {
    padding: var(--space-xs) var(--space-md);
    background: rgba(255, 255, 255, 0.95);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-ocean-deep);
  }

  .property-badge {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    z-index: 1;
  }

  .badge-featured {
    background: var(--color-gold);
    color: var(--color-midnight);
  }

  .badge-new {
    background: var(--color-seafoam);
    color: var(--color-white);
  }

  .badge-sold {
    background: var(--color-coral);
    color: var(--color-white);
  }

  .image-gallery-hint {
    position: absolute;
    bottom: var(--space-md);
    right: var(--space-md);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(0, 0, 0, 0.6);
    border-radius: var(--radius-sm);
    color: var(--color-white);
    font-size: 0.75rem;
  }

  /* Content Section */
  .property-content {
    padding: var(--space-lg);
  }

  .property-location {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.85rem;
    color: var(--color-seafoam);
    margin-bottom: var(--space-sm);
  }

  .property-title {
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--color-ocean-deep);
    margin-bottom: var(--space-md);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .property-features {
    display: flex;
    gap: var(--space-lg);
    padding: var(--space-md) 0;
    border-top: 1px solid var(--color-sand);
    border-bottom: 1px solid var(--color-sand);
    margin-bottom: var(--space-md);
  }

  .feature {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.85rem;
    color: var(--color-charcoal);
  }

  .feature svg {
    color: var(--color-sand-dark);
  }

  .property-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .property-price {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-ocean-deep);
  }

  .btn-details {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    border: none;
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-ocean);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .btn-details:hover {
    color: var(--color-ocean-deep);
  }

  .btn-details svg {
    transition: transform var(--transition-fast);
  }

  .btn-details:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .property-features {
      gap: var(--space-md);
    }

    .feature span {
      display: none;
    }

    .btn-favorite {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
