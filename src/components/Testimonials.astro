---
const testimonials = [
  {
    id: 1,
    name: "Sarah & Michael Johnson",
    location: "Denver, Colorado",
    image: "https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?w=200&q=80",
    rating: 5,
    text: "Costa Riviera made our dream of owning a beachfront condo in Playa del Carmen a reality. Their team handled everything from property search to closing with incredible professionalism. We couldn't be happier!",
    property: "Beachfront Condo, Playacar"
  },
  {
    id: 2,
    name: "Thomas Weber",
    location: "Munich, Germany",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=200&q=80",
    rating: 5,
    text: "As an international buyer, I was concerned about the legal complexities. The team at Costa Riviera provided exceptional guidance through the entire process. Their attention to detail and local expertise is unmatched.",
    property: "Investment Portfolio, Various"
  },
  {
    id: 3,
    name: "Maria & Carlos Rodriguez",
    location: "Mexico City, Mexico",
    image: "https://images.unsplash.com/photo-1580489944761-15a19d654956?w=200&q=80",
    rating: 5,
    text: "We found our vacation home in Puerto Aventuras thanks to Costa Riviera. Their property management services have been fantastic - they handle everything while we're away, and our rental income exceeds expectations.",
    property: "Marina Villa, Puerto Aventuras"
  }
];
---

<section class="testimonials section">
  <div class="testimonials-bg">
    <div class="bg-pattern"></div>
  </div>
  
  <div class="container">
    <div class="section-header reveal">
      <span class="section-label" style="color: var(--color-gold);">Client Stories</span>
      <h2 class="section-title" style="color: var(--color-white);">What Our Clients Say</h2>
      <p class="section-subtitle" style="color: rgba(255,255,255,0.8);">
        Real experiences from clients who found their perfect property in paradise.
      </p>
    </div>

    <div class="testimonials-carousel">
      <div class="testimonials-track">
        {testimonials.map((testimonial, index) => (
          <div class="testimonial-card reveal" style={`animation-delay: ${index * 0.2}s`}>
            <div class="testimonial-rating">
              {[...Array(testimonial.rating)].map(() => (
                <svg viewBox="0 0 24 24" width="20" height="20" fill="var(--color-gold)">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              ))}
            </div>
            
            <blockquote class="testimonial-text">
              "{testimonial.text}"
            </blockquote>
            
            <div class="testimonial-author">
              <img src={testimonial.image} alt={testimonial.name} class="author-image" />
              <div class="author-info">
                <span class="author-name">{testimonial.name}</span>
                <span class="author-location">{testimonial.location}</span>
              </div>
            </div>
            
            <div class="testimonial-property">
              <svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
                <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
              </svg>
              <span>{testimonial.property}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Trust Indicators -->
    <div class="trust-row reveal">
      <div class="trust-item">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/120px-Google_%22G%22_Logo.svg.png" alt="Google" />
        <div class="trust-content">
          <span class="trust-rating">4.9</span>
          <span class="trust-text">Google Reviews</span>
        </div>
      </div>
      <div class="trust-divider"></div>
      <div class="trust-item">
        <svg viewBox="0 0 24 24" width="32" height="32" fill="var(--color-gold)">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <div class="trust-content">
          <span class="trust-rating">98%</span>
          <span class="trust-text">Client Satisfaction</span>
        </div>
      </div>
      <div class="trust-divider"></div>
      <div class="trust-item">
        <svg viewBox="0 0 24 24" width="32" height="32" fill="var(--color-seafoam)">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          <path d="M9 12l2 2 4-4" fill="none" stroke="var(--color-ocean-deep)" stroke-width="2"/>
        </svg>
        <div class="trust-content">
          <span class="trust-rating">AMPI</span>
          <span class="trust-text">Certified Agency</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials {
    position: relative;
    background: var(--color-ocean-deep);
    overflow: hidden;
  }

  .testimonials-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .bg-pattern {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  .testimonials .section-header {
    position: relative;
    z-index: 1;
  }

  .testimonials .section-label::before,
  .testimonials .section-label::after {
    background: var(--color-gold);
  }

  /* Carousel */
  .testimonials-carousel {
    position: relative;
    z-index: 1;
    margin-bottom: var(--space-4xl);
  }

  .testimonials-track {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }

  .testimonial-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-base);
  }

  .testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .testimonial-rating {
    display: flex;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
  }

  .testimonial-text {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-style: italic;
    line-height: 1.7;
    color: var(--color-charcoal);
    margin: 0 0 var(--space-xl);
    position: relative;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-sand);
  }

  .author-image {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-full);
    object-fit: cover;
    border: 3px solid var(--color-sand-light);
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    font-weight: 600;
    color: var(--color-ocean-deep);
  }

  .author-location {
    font-size: 0.85rem;
    color: var(--color-charcoal);
    opacity: 0.7;
  }

  .testimonial-property {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.85rem;
    color: var(--color-seafoam);
  }

  /* Trust Row */
  .trust-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-3xl);
    padding: var(--space-xl) var(--space-2xl);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .trust-item img {
    width: 32px;
    height: 32px;
    object-fit: contain;
  }

  .trust-content {
    display: flex;
    flex-direction: column;
  }

  .trust-rating {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-white);
    line-height: 1;
  }

  .trust-text {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .trust-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .testimonials-track {
      grid-template-columns: 1fr;
      max-width: 600px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .trust-row {
      flex-direction: column;
      gap: var(--space-lg);
    }

    .trust-divider {
      width: 100px;
      height: 1px;
    }
  }
</style>
