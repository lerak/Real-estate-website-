<style>
  .footer {
    position: relative;
    background: var(--color-ocean-deep);
    color: var(--color-white);
    margin-top: var(--space-5xl);
  }

  .footer-wave {
    position: absolute;
    top: -119px;
    left: 0;
    right: 0;
    height: 120px;
    overflow: hidden;
  }

  .footer-wave svg {
    display: block;
    width: 100%;
    height: 100%;
  }

  .footer-content {
    padding: var(--space-4xl) 0 var(--space-2xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.5fr;
    gap: var(--space-3xl);
  }

  /* Brand Column */
  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    margin-bottom: var(--space-lg);
  }

  .footer-logo-icon {
    width: 40px;
    height: 40px;
    color: var(--color-seafoam);
  }

  .footer-logo-text {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-white);
  }

  .footer-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .footer-social {
    display: flex;
    gap: var(--space-sm);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    color: var(--color-white);
    transition: all var(--transition-base);
  }

  .social-link:hover {
    background: var(--color-seafoam);
    transform: translateY(-3px);
  }

  /* Links Columns */
  .footer-links h4,
  .footer-contact h4 {
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-seafoam);
    margin-bottom: var(--space-lg);
  }

  .footer-links ul {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: var(--space-sm);
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    transition: all var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-white);
    padding-left: var(--space-sm);
  }

  /* Contact Column */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .contact-item {
    display: flex;
    gap: var(--space-md);
    color: rgba(255, 255, 255, 0.7);
  }

  .contact-item svg {
    flex-shrink: 0;
    color: var(--color-seafoam);
    margin-top: 2px;
  }

  .contact-item p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    margin: 0;
    line-height: 1.5;
  }

  .contact-item .small {
    font-size: 0.8rem;
    opacity: 0.7;
  }

  /* Trust Section */
  .footer-trust {
    margin-top: var(--space-3xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    gap: var(--space-3xl);
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.85rem;
  }

  .trust-badge svg {
    color: var(--color-gold);
  }

  /* Footer Bottom */
  .footer-bottom {
    background: rgba(0, 0, 0, 0.2);
    padding: var(--space-lg) 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .footer-legal {
    display: flex;
    gap: var(--space-xl);
  }

  .footer-legal a {
    color: rgba(255, 255, 255, 0.5);
    transition: color var(--transition-fast);
  }

  .footer-legal a:hover {
    color: var(--color-white);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-2xl);
    }

    .footer-brand {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-brand {
      grid-column: span 1;
    }

    .trust-badges {
      flex-direction: column;
      align-items: center;
      gap: var(--space-md);
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: var(--space-md);
      text-align: center;
    }

    .footer-legal {
      flex-wrap: wrap;
      justify-content: center;
      gap: var(--space-md);
    }
  }
</style>
